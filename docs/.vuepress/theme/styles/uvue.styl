@import url('https://fonts.googleapis.com/css?family=Nunito:200,400,700');
@import "~prismjs/themes/prism.css"

body
  font-family 'Nunito', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color #555
  text-rendering optimizeLegibility
  text-shadow rgba(0, 0, 0, .01) 0 0 1px
  -moz-osx-font-smoothing grayscale
  font-smoothing antialiased
  -webkit-font-smoothing antialiased

h1
  font-size 3rem
  color $textColor

h2
  font-size 1.75rem
  font-weight 700
  padding-bottom 2rem
  display block
  color #333
  &::after
    display block
    content " "
    height 3px
    width 4rem
    background $accentColor
    margin-top 1rem

.navbar
  box-shadow 0 1px 7px rgba(0,0,0,0.05)
  .logo
    height 3.4rem
    width 3.4rem
    min-width auto
  .site-name
    display none
  .nav-links .nav-item
    margin-left: 2.5rem
    &:first-child
      margin-left: 1.5rem

.home-page .navbar .logo
  display none;

.sidebar
  font-size 17px
  background #f9f9f9
  .sidebar-sub-headers a.sidebar-link
    font-weight: normal;
    color #999
    &:hover,
    &:active,
    &.active
      color #666

a.sidebar-link
  font-weight: 900;

.home,
.page
  background #fff

.nav-links a
  color #999

  &::after
    display block
    content ""
    height 2px
    width 0
    background $accentColor
    transition width 0.2s

  &:hover,
  &:focus,
  &.router-link-active
    border-bottom 0 !important
    &::after
      width 100%

.search-box input
  border 0
  background #f9f9f9 url(../search.svg) 0.9rem 0.6rem no-repeat
  color #333

.home .features
  border-top 0

.content:not(.custom),
.page-nav
  margin 0

.page .content:not(.custom)
  margin 1rem 0 0 1rem

.content:not(.custom)
  h1,
  h2
    a:hover
      text-decoration: none

.home .hero h1
  margin-bottom 0

.home .hero .description
  margin-top 0
  color #777

.home .feature h2
  font-weight 900

.home .feature p
  color #555

.home .footer
  border-top 0
  color #777

.sidebar-button
  margin-top: 0.5rem

.token.operator
  background transparent !important

:not(pre) > code[class*="language-"], pre[class*="language-"]
  background #f9f9f9 !important

.home .hero .action-button
  background #2c3e50
  border-bottom 0
  border-radius 0.5rem
  &:hover,
  &:focus
    background: lighten(#2c3e50, 20%)